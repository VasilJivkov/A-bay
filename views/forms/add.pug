extends ../_shared/master

block content
    .row
        form(action="/add",method="POST").col-md-4.col-md-offset-3
            .row
                span.col-md-2 Title:
                input.col-md-4.col-md-offset-1(type="text", name="title", placeholder="Enter title..")
            .row
                span.col-md-2 Description:  
                textarea(name="desc").col-md-4.col-md-offset-1
            .row
                div.col-md-2 Category:
                each category, index in categories
                    label
                        input(name="categoryId", type="radio", value=category.id)
                        span.col-md-offset-1
                            = category.name
            .row
                span.col-md-2 Price:
                input(type="number", name="price", placeholder="Enter Price..").col-md-4.col-md-offset-1
            .row
                span.col-md-2 Photo:
                input(type="text", name="picture", placeholder="Enter link to photo").col-md-4.col-md-offset-1
            .row
                span.col-md-2 City:
                select(name='cityId').col-md-4.col-md-offset-1
                    each city, index in cities
                        option(name="cityId", value=city.id)
                            =city.name
            .row
                div.col-md-4 Delivery Type:
                each delivery, index in deliveryType
                    label
                        input(name="deliveryTypeId", type="checkbox", value=delivery.id)
                        span
                            =delivery.name
            .row
                button 
                    | Add