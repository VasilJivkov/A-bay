extends ../_shared/master

block content
    div.col-md-6.col-md-offset-3.top-buffer.line-align
        form.form-horizontal(action="/edit", method="GET")
            .form-group.row
                label.col-md-3.col-form-label(for='username-input') Username
                .col-md-9
                    input#username-input.form-control(type='text', value=user.username)
            .form-group.row
                label.col-md-3.col-form-label(for='password-input') Password
                .col-md-9
                    input#password-input.form-control(type='password', value=user.password)
            .form-group.row
                label.col-md-3.col-form-label(for='email-input') Email
                .col-md-9
                    input#email-input.form-control(type='text', value=user.email)
            .form-group.row
                label.col-md-3.col-form-label(for='firstName-input') First Name
                .col-md-9
                    input#firstName-input.form-control(type='text', value=user.firstName)
            .form-group.row
                label.col-md-3.col-form-label(for='lastName-input') Last Name
                .col-md-9
                    input#lastName-input.form-control(type='text', value=user.lastName)
            .form-group.row
                label.col-md-3.col-form-label(for='address-input') Address
                .col-md-9
                    input#address-input.form-control(type='text', value=user.address)
            .form-group.row
                label.col-md-3.col-form-label(for='city-input') City
                .col-md-9
                    input#city-input.form-control(type='dropdown', value=user.city)
            div.form-group
                div.col-md-6.col-md-offset-3
                    button.col-md-12
                        | Update